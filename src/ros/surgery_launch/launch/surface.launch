<launch>

	<node pkg="rosbag" name="play" type="play" args="$(find surface_analysis)/data/string_static.bag -l"/>

	<node pkg="surface_analysis" type="surface" name="surface" output="screen">
		<remap from="depthImage" to="depth/image_raw" />
		<remap from="colourImage" to="rgb/image_color" />
		<remap from="irImage" to="ir/image_ir" />
    </node>

    <node pkg="depth_view" type="depth_view.py" name="depth_view" output="screen">
		<remap from="image" to="segmented/depth" />
		<param name="window_name" value="Depth image" />
    </node>

    <node pkg="rviz" type="rviz" name="rviz"/>
</launch>
